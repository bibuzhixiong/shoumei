<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/ic_black_back" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="注册"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginRight="56dp"
            android:textColor="@color/common_color"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_color"/>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

        <LinearLayout
            android:id="@+id/login_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">
            <com.wanhan.shouyu.widget.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="@dimen/dp_5"
                android:textSize="16sp"
                android:textColorHint="@color/common_h2"
                android:hint="@string/hint_input_phone"
                />

            <TextView
                android:id="@+id/tv_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/blue"
                android:text="获取验证码"/>
        </LinearLayout>
        <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
            android:id="@+id/login_view1"
            android:layout_below="@+id/login_ll1"
            android:background="@color/common_color"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>
        <LinearLayout
            android:id="@+id/login_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_view1"

            android:gravity="center_vertical"
            >

            <com.wanhan.shouyu.widget.ClearEditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dp_5"
                android:hint="请输入验证码"
                android:paddingLeft="26dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:inputType="number"
                android:textColorHint="@color/common_h2"
                android:textSize="16sp" />

        </LinearLayout>
        <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"

            android:layout_below="@+id/login_ll2"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/common_color"
            android:layout_marginRight="@dimen/dp_20"/>
        <LinearLayout
            android:id="@+id/login_ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_view1"

            android:gravity="center_vertical"
            >

            <com.wanhan.shouyu.widget.ClearEditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dp_5"
                android:hint="请输入密码"
                android:paddingLeft="26dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:password="true"
                android:textColorHint="@color/common_h2"
                android:textSize="16sp" />

        </LinearLayout>
        <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
            android:id="@+id/login_view2"
            android:layout_below="@+id/login_ll2"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/common_color"
            android:layout_marginRight="@dimen/dp_20"/>
    <LinearLayout
        android:id="@+id/login_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_view1"

        android:gravity="center_vertical"
        >

        <com.wanhan.shouyu.widget.ClearEditText
            android:id="@+id/et_password1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/dp_5"
            android:hint="请再次输入密码"
            android:paddingLeft="26dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:password="true"
            android:textColorHint="@color/common_h2"
            android:textSize="16sp" />

    </LinearLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
        android:id="@+id/login_view3"
        android:layout_below="@+id/login_ll2"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/common_color"
        android:layout_marginRight="@dimen/dp_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="20dp"
        android:padding="@dimen/dp_10">
        <CheckBox
            android:id="@+id/cb_terms"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:checked="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_checxbox_selector"
            android:button="@null" />
        <TextView
            android:id="@+id/terms_register_tv"
            style="@style/MY.Theme.Widget.Text"
            android:layout_toRightOf="@+id/terms_cb"
            android:layout_toLeftOf="@+id/login_register_tv"
            android:layout_marginLeft="4dp"
            android:text="同意"/>
        <TextView
            android:id="@+id/tv_shouyu_terms"
            style="@style/MY.Theme.Widget.Text"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue"
            android:text="《瘦鱼APP服务条款》"/>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/login_view2"
           >


        <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:text="注册"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_redbtn_selector"/>



    </RelativeLayout>
</LinearLayout>
